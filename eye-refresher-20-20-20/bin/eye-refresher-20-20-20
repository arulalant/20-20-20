import sys
import os
import time 

import locale
locale.textdomain('eye-refresher-20-20-20')

# Add project root directory (enable symlink and trunk execution)
PROJECT_ROOT_DIRECTORY = os.path.abspath(
    os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0]))))

python_path = []
if os.path.abspath(__file__).startswith('/opt'):
    locale.bindtextdomain('eye-refresher-20-20-20', '/opt/extras.ubuntu.com/eye-refresher-20-20-20/share/locale')
    syspath = sys.path[:] # copy to avoid infinite loop in pending objects
    for path in syspath:
        opt_path = path.replace('/usr', '/opt/extras.ubuntu.com/eye-refresher-20-20-20')
        python_path.insert(0, opt_path)
        sys.path.insert(0, opt_path)
    os.putenv("XDG_DATA_DIRS", "%s:%s" % ("/opt/extras.ubuntu.com/eye-refresher-20-20-20/share/", os.getenv("XDG_DATA_DIRS", "/usr/local/share/:/usr/share/")))
if (os.path.exists(os.path.join(PROJECT_ROOT_DIRECTORY, 'eye_refresher_20_20_20'))
    and PROJECT_ROOT_DIRECTORY not in sys.path):
    python_path.insert(0, PROJECT_ROOT_DIRECTORY)
    sys.path.insert(0, PROJECT_ROOT_DIRECTORY)
if python_path:
    os.putenv('PYTHONPATH', "%s:%s" % (os.getenv('PYTHONPATH', ''), ':'.join(python_path))) # for subprocesses

import eye_refresher_20_20_20

def loop_forever(interval=1200):
    # get window object 
    window = eye_refresher_20_20_20.main()
    while True:
        # run the 20-20-20 window
        eye_refresher_20_20_20.run(window)
        # take a 20 min nape 
        time.sleep(interval)
    # end of while True:
# end of def loop_forever():

if __name__ == '__main__':
    
    loop_forever()
    
    
    
